{
    "name": "@wont/tools",
    "version": "1.0.0",
    "description": "Tools to Build library for vue2、vue3、react&lt;17、utils，using gulp、babel、rollup",
    "main": "lib/index.js",
    "bin": {
        "wont-tools": "lib/index.js"
    },
    "scripts": {
        "link": "npm run prepublishOnly && npm link",
        "prepublishOnly": "tsc",
        "prettier": "prettier --write .",
        "eslint": "eslint . --ext .jsx,.js,.tsx,.ts",
        "eslint:fix": "eslint . --ext .jsx,.js,.tsx,.ts --fix",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wont-org/tools.git"
    },
    "keywords": [
        "tools",
        "build tools",
        "build library",
        "library",
        "react",
        "vue"
    ],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/wont-org/tools/issues"
    },
    "homepage": "https://github.com/wont-org/tools#readme",
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "chalk": "^4.1.1",
        "eslint": "^7.29.0",
        "eslint-config-ali": "^12.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.2",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "@babel/core": "^7.14.6",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.14.5",
        "@types/gulp": "^4.0.8",
        "commander": "^8.0.0",
        "glob": "^7.1.7",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-cssnano": "^2.1.3",
        "gulp-less": "^5.0.0",
        "less": "^4.1.1"
    },
    "hooks": {
        "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    },
    "lint-staged": {
        "*.{jsx,js,tsx,ts,md,mdx,css,less,html}": [
            "prettier --write"
        ],
        "*.{jsx,js,tsx,ts}": [
            "eslint --cache --fix"
        ]
    }
}
